{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/settings-backup.sh",
            "description": "Backup critical config files before editing"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/secret-scanner.sh",
            "description": "Prevent accidentally writing sensitive data"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/toon-validator.sh",
            "description": "Validate TOON format syntax"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/markdown-formatter.sh",
            "description": "Auto-format markdown files"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/file-size-monitor.sh",
            "description": "Warn about files exceeding size limits"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/auto-optimize.sh",
            "description": "Suggest optimization checks after code changes"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": ["Read(*)", "Write(*)", "Edit(*)", "Grep(*)", "Glob(*)", "Bash(*)"],
    "ask": [],
    "deny": []
  },
  "model": "claude-sonnet-4-5",
  "orchestration": {
    "enabled": true,
    "semanticMatching": true,
    "multiSkillWorkflows": true,
    "maxActiveSkills": 5,
    "semanticThreshold": 0.7,
    "cacheEmbeddings": true,
    "embeddingProvider": "openai"
  },
  "workflows": {
    "enabled": true,
    "defaultTimeout": 300000,
    "saveLog": true,
    "logDirectory": ".claude/logs/workflows"
  },
  "metaCommands": {
    "enabled": true,
    "autoValidate": true,
    "preventConflicts": true,
    "registryPath": ".claude/command-registry.json"
  }
}
