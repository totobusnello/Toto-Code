# Dockerfile for parallel execution testing
FROM node:20-alpine

# Install system dependencies
RUN apk add --no-cache \
    git \
    bash \
    curl \
    python3 \
    py3-pip \
    build-base

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY agentic-flow/package*.json ./agentic-flow/

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Build the project
RUN npm run build

# Create test results directory
RUN mkdir -p /app/test-results

# Set environment variables for testing
ENV NODE_ENV=test
ENV ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
ENV ENABLE_PARALLEL_EXECUTION=true
ENV LOG_LEVEL=info

# Run tests by default
CMD ["npm", "run", "test:parallel"]
