FROM node:18-slim

# Install Python and build tools for better-sqlite3
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy package files
COPY package.json ./

# Install dependencies
RUN npm install

# Copy application files
COPY . .

# Set up environment
ENV NODE_ENV=production

WORKDIR /app

# Default command
CMD ["node", "bin/cli.js", "--help"]
