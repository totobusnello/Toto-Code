# =============================================================================
# Agentic Flow - Production Docker Image
# Production-ready AI agent orchestration platform
# =============================================================================

FROM node:20-alpine AS base

# Install system dependencies
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    git \
    bash \
    curl \
    ca-certificates

WORKDIR /app

# =============================================================================
# Dependencies Stage
# =============================================================================
FROM base AS dependencies

# Copy package files
COPY package*.json ./
COPY agentic-flow/package*.json ./agentic-flow/

# Install dependencies (use npm install since we don't have full lockfile)
RUN npm install --omit=dev --ignore-scripts

# =============================================================================
# Build Stage
# =============================================================================
FROM base AS builder

# Copy dependencies
COPY --from=dependencies /app/node_modules ./node_modules
COPY --from=dependencies /app/package*.json ./

# Copy source code
COPY agentic-flow ./agentic-flow
COPY tsconfig.json ./

# Build the project
RUN npm run build

# =============================================================================
# Production Stage
# =============================================================================
FROM node:20-alpine AS production

# Install runtime dependencies only
RUN apk add --no-cache \
    bash \
    curl \
    ca-certificates \
    dumb-init

WORKDIR /app

# Copy built artifacts
COPY --from=builder /app/agentic-flow/dist ./agentic-flow/dist
COPY --from=dependencies /app/node_modules ./node_modules
COPY package*.json ./

# Create data directory for AgentDB
RUN mkdir -p /app/data && chmod 777 /app/data

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD node -e "require('http').get('http://localhost:${PORT:-3000}/health', (r) => { process.exit(r.statusCode === 200 ? 0 : 1); });"

# Use dumb-init to handle signals properly
ENTRYPOINT ["/usr/bin/dumb-init", "--"]

# Default command
CMD ["node", "agentic-flow/dist/index.js"]

# Labels
LABEL maintainer="ruv <contact@ruv.io>"
LABEL org.opencontainers.image.title="Agentic Flow"
LABEL org.opencontainers.image.description="Production-ready AI agent orchestration platform"
LABEL org.opencontainers.image.version="2.0.1-alpha"
LABEL org.opencontainers.image.source="https://github.com/ruvnet/agentic-flow"
LABEL org.opencontainers.image.licenses="MIT"

# Expose default port
EXPOSE 3000
