# =============================================================================
# Agentic Flow Docker Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# API Keys (Required)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
OPENROUTER_API_KEY=sk-or-v1-your-key-here
HUGGINGFACE_API_KEY=hf_your-key-here
GOOGLE_GEMINI_API_KEY=your-key-here

# -----------------------------------------------------------------------------
# Optional Services
# -----------------------------------------------------------------------------
E2B_API_KEY=e2b_your-key-here
E2B_ACCESS_TOKEN=sk_e2b_your-token-here
SUPABASE_ACCESS_TOKEN=sbp_your-token-here
PERPLEXITY_API_KEY=pplx-your-key-here

# -----------------------------------------------------------------------------
# Research Swarm Configuration
# -----------------------------------------------------------------------------
RESEARCH_DEPTH=5                      # 1-10 scale (how deep to research)
RESEARCH_TIME_BUDGET=120              # Minutes (max execution time)
RESEARCH_FOCUS=balanced               # narrow|balanced|broad
ANTI_HALLUCINATION_LEVEL=high         # low|medium|high
CITATION_REQUIRED=true                # Require citations
ED2551_MODE=true                      # Enhanced research mode
MAX_RESEARCH_ITERATIONS=10            # Max recursive iterations
VERIFICATION_THRESHOLD=0.90           # Quality threshold (0-1)

# -----------------------------------------------------------------------------
# AgentDB & ReasoningBank Configuration
# -----------------------------------------------------------------------------
ENABLE_REASONINGBANK=true             # Enable self-learning
REASONINGBANK_BACKEND=sqlite          # sqlite|postgresql
REASONINGBANK_MIN_REWARD=0.7          # Minimum reward to store pattern
REASONINGBANK_MAX_PATTERNS=10000      # Max patterns to store

# -----------------------------------------------------------------------------
# Federation Configuration
# -----------------------------------------------------------------------------
ENABLE_FEDERATION=false               # Enable federated coordination
FEDERATION_MODE=docker                # docker|kubernetes|local
FEDERATION_MIN_NODES=2                # Minimum nodes for federation
FEDERATION_MAX_NODES=10               # Maximum federated nodes
FEDERATION_QUIC_ENABLED=true          # Use QUIC for coordination

# -----------------------------------------------------------------------------
# Performance & Monitoring
# -----------------------------------------------------------------------------
ENABLE_VERBOSE_LOGGING=true           # Detailed execution logging
ENABLE_PERFORMANCE_METRICS=true       # Track performance metrics
LOG_TOOL_CALLS=true                   # Log each MCP tool call

# -----------------------------------------------------------------------------
# Port Configuration
# -----------------------------------------------------------------------------
PORT=3000                             # Main application port
MCP_PORT=8080                         # MCP server port
SWARM_PORT=9000                       # Swarm coordinator port
AGENTDB_PORT=5432                     # AgentDB port
