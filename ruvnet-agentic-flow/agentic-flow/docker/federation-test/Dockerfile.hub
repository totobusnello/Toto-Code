FROM node:20-slim

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci --only=production

# Copy source code
COPY dist ./dist
COPY src ./src
COPY tsconfig.json ./

# Install TypeScript and tsx for running
RUN npm install -g tsx typescript

# Create data directory
RUN mkdir -p /data

# Expose WebSocket port
EXPOSE 8443

# Health check endpoint
COPY docker/federation-test/hub-health.js ./

# Start hub server
CMD ["tsx", "docker/federation-test/run-hub.ts"]
