FROM node:20-slim

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci --only=production

# Copy source code
COPY dist ./dist
COPY src ./src

# Install TypeScript and tsx
RUN npm install -g tsx typescript

# Expose monitor port
EXPOSE 3000

# Start monitor dashboard
CMD ["tsx", "docker/federation-test/run-monitor.ts"]
