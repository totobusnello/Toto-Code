FROM node:20-slim

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install production dependencies
RUN npm ci --only=production

# Copy built distribution
COPY dist ./dist
COPY wasm ./wasm

# Create data directory for database
RUN mkdir -p /data

# Expose ports (WebSocket + Health Check)
EXPOSE 8443 8444

# Copy standalone hub server
COPY docker/federation-test/standalone-hub.js ./docker/federation-test/

# Run standalone hub server
CMD ["node", "docker/federation-test/standalone-hub.js"]
