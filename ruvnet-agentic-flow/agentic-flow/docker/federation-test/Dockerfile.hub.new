FROM node:20-slim

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (needed for tsx)
RUN npm install

# Copy source code
COPY src ./src
COPY wasm ./wasm

# Create data directory for database
RUN mkdir -p /data

# Expose ports
EXPOSE 8443 8444

# Run hub server with tsx
CMD ["npx", "tsx", "docker/federation-test/run-hub.ts"]
