# Healthcare Provider System - Environment Variables

# SMTP Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=notifications@healthcare.example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=Healthcare System <noreply@healthcare.example.com>
SMTP_REPLY_TO=support@healthcare.example.com

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# WebSocket Configuration
WS_PORT=8080
WS_SECURE=true

# Security Configuration
ENCRYPTION_KEY=change-this-to-a-strong-encryption-key-in-production
JWT_SECRET=change-this-to-a-strong-jwt-secret
SESSION_SECRET=change-this-to-a-strong-session-secret

# Database Configuration (if using database storage)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=healthcare_system
DB_USER=healthcare_user
DB_PASSWORD=your-database-password

# Redis Configuration (for session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# System Configuration
NODE_ENV=development
LOG_LEVEL=info
API_VERSION=v1
PORT=3000

# HIPAA Compliance
AUDIT_LOG_ENABLED=true
ENCRYPTION_ENABLED=true
MFA_ENABLED=true
SESSION_TIMEOUT_MINUTES=30

# Feature Flags
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBSOCKET_NOTIFICATIONS=true
ENABLE_AUTO_ASSIGNMENT=true
ENABLE_AUTO_ESCALATION=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true
