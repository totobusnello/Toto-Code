<!-- Directory.Build.props Template for .NET Projects -->
<!-- Generated by ln-741-linter-configurator -->
<!-- Place this file in solution root to apply to all projects -->

<Project>
  <PropertyGroup>
    <!-- Enable nullable reference types -->
    <Nullable>enable</Nullable>

    <!-- Enable implicit usings for modern C# -->
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- Treat warnings as errors for CI/CD -->
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>

    <!-- Use latest analysis rules -->
    <AnalysisLevel>latest</AnalysisLevel>
    <AnalysisMode>Recommended</AnalysisMode>

    <!-- Enable code analysis on build -->
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>

    <!-- Generate documentation XML -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <!-- Suppress specific warnings if needed -->
    <!-- <NoWarn>CS1591</NoWarn> -->
  </PropertyGroup>

  <ItemGroup>
    <!-- .NET Code Analyzers (included in SDK 5+) -->
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="9.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>
</Project>
