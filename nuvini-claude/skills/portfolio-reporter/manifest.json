{
  "name": "portfolio-reporter",
  "version": "2.0.0",
  "description": "Generate comprehensive Nuvini portfolio financial reports and presentations from individual company Excel files. Supports monthly and quarterly reports with optional AI-generated visuals.",
  "triggers": [
    "portfolio report",
    "portfolio update",
    "portfolio presentation",
    "consolidate financials",
    "monthly portfolio",
    "quarterly portfolio",
    "quarterly report",
    "/portfolio-report"
  ],
  "entrypoint": "skill.md",
  "dependencies": [
    "pandas>=2.0.0",
    "openpyxl>=3.1.0",
    "python-pptx>=0.6.21",
    "numpy>=1.24.0",
    "google-genai>=1.0.0",
    "python-dotenv>=1.0.0"
  ],
  "files": [
    "skill.md",
    "config.py",
    "quarterly.py",
    "output_manager.py",
    "interactive.py",
    "visual_generator.py",
    "extract_financials.py",
    "consolidate_financials.py",
    "generate_presentation.py",
    "portfolio_reporter.py",
    "requirements.txt"
  ],
  "outputs": {
    "excel": "Consolidated_Summary_{Period}_{Year}.xlsx",
    "presentation": "Portfolio_Update_{Period}_{Year}.pptx",
    "output_folder": "output/{Period}/"
  },
  "author": "Nuvini",
  "tags": [
    "finance",
    "portfolio",
    "reporting",
    "excel",
    "powerpoint",
    "consolidation",
    "quarterly",
    "interactive",
    "ai-visuals"
  ]
}
